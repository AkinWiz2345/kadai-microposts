<div class="row">
 <div class="col-4">
   <img class="mr-2 rounded img-fluid" src="<%= gravatar_url(@micropost.user, { size: 200 }) %>" alt="">
 </div> 
  <div class="col-8">
    <div class="media-body">
      <div>
        <%= link_to @micropost.user.name, user_path(@micropost.user) %> <span class="text-muted">posted at <%= @micropost.created_at %></span>
      </div>
      <div>
        <p class="h1"><%= @micropost.content %></p>
      </div>
      <div class="row">
        <%= render 'favorites/favorite_button', micropost: @micropost %>
        <% if current_user == @micropost.user %>
          <%= link_to "Edit", edit_micropost_path(@micropost), class: 'btn btn-success btn-sm ml-1' %>
          <%= link_to "Delete", @micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm ml-1' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
