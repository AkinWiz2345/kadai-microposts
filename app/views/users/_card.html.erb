<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= @user.name %></h3>
  </div>
  <div class="card-body">
    <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
  </div>
</div>
<%= render 'relationships/follow_button', user: @user %>
<% if current_user == @user  && !current_user.admin? %>
  <%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-success btn-block mt-1' %>
  <%= link_to 'Delete User', @user, method: :delete, data: { confirm: '本当に削除してよろしいですか?' }, class: 'btn btn-danger btn-block mt-1' %>
<% elsif  current_user == @user && current_user.admin? %>  
  <%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-success btn-block mt-1' %>
<% elsif !(current_user == @user) && current_user.admin? %>  
  <%= link_to 'Delete User', @user, method: :delete, data: { confirm: '本当に削除してよろしいですか?' }, class: 'btn btn-danger btn-block mt-1' %>
<% end %>
