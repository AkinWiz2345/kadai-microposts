<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= user.name %></h3>
  </div>
  <div class="card-body">
    <% if user.image? %>
      <%= image_tag user.image.url, class: "rounded img-fluid" %>
    <% else %>
      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
    <% end %>
  </div>
</div>
